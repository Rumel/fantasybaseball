<div class="row">
  <div class="col-xs-12 text-center">
    <h1>Weekly Standings</h1>
  </div>
</div>
<div class="row">
  <%= Enum.map(@teams, fn team -> %>
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-1">
          <h3><%= team.place %></h3>
        </div>
        <a href="http://games.espn.com<%= team.teamLink %>" target="_blank" >
          <div class="col-xs-8 ">
            <h3><%= team.name %><h3>
          </div>
        </a>
        <a href="http://games.espn.com<%= team.matchupLink %>" target="_blank" >
          <div class="col-xs-3 text-right">
            <h3><%= team.score %></h3>
          </div>
        </a>
      </div>
    </div>
  <% end) %>
</div>